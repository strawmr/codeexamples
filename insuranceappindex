    	<script>    	
    	/*Javascript functions*/
		
    	function viewClaims(){  
    	var claimID = "cvGI5bTr5R";  	
    	var invocationData = {
        adapter : 'insuranceclaims',
        procedure : 'getClaims',
        parameters : [claimID]
  		};
 		var options =  
  		{
     	 onSuccess : GetDataSuccess,
      	 onFailure : GetDataFailed,
     	 timeout : 30000
  		};
  		WL.Client.invokeProcedure(invocationData, options);
  		}
    	
    	function GetDataSuccess(result){
	 
			alert(JSON.stringify(result.invocationResult.resultSet));
		  
		}
		function GetDataFailed(result){
	 
			
 			WL.SimpleDialog.show("There was a problem with the app, we're sorry","", [ {
  			text : 'OK',
  			handler : simpleDialogButton1Click
 			}]);
	  
		}		
    	</script>
    	
    	<script>
    	
		function claimConfirm() {		
				
    		
    	var invocationData = {
        adapter : 'insuranceclaims',
        procedure : 'insertClaimNo',
        parameters : [$('#ID').val(),$('#Name').val(),$('#Vehicle').val(),$('#Details').val()]
  		};
 		var options =  
  		{
     	 onSuccess : InsertDataSuccess,
      	 onFailure : InsertDataFailed,
     	 timeout : 30000
  		};
    	WL.Client.invokeProcedure(invocationData, options);	
    		swal("Claim filed!", "Please keep the claim number for records", "success")
    		
			history.go(-1);
			
				}	
		/*function InsertDataSuccess(result){
	 
			 alert("Success");
		  
		}
		function InsertDataFailed(result){
	 
			 alert("Failure");
	  
		}*/		
		</script>
		<script>
 		function randomString() {
			var chars = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXTZabcdefghiklmnopqrstuvwxyz";
			var string_length = 10;
			var randomstring = '';
		for (var i=0; i<string_length; i++) {
			var rnum = Math.floor(Math.random() * chars.length);
			randomstring += chars.substring(rnum,rnum+1);
		}
		document.claimform.randomfield.value = randomstring;   	   		
   	    }  	    
 		</script>
		
		<script>
		function repairStatus() {
			var today, someday, text;	
			today = new Date();
			someday = new Date();
			someday.setFullYear(2015, 11, 1);

		if (someday > today) {
   			text = "Your repairs are not ready.";}

		else {
  			 text = "Your repairs are ready.";}
   
   		 var claim = prompt("Please enter your claim number:");
    		if (claim != null) {
        	swal(text, "Please check back later.", "error");  }
		}
		
		
	
	//$.getScript(path + "js/payment.js");
	function Payment(){
	   var x;
	   var y = confirm("Are you sure?");
	   
	   if (y == true) {
	     x = alert('Payment Confirmed');
	    }
	   else {
	     x = alert('Payment Cancelled');
	   } 
	  history.go(-1); 
	   
	}
	   </script>	
		
