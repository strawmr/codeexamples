@using Microsoft.AspNet.Identity


<div class="">
    <!--DESKTOP NAVIGATION-->
    <nav class="navbar navbar-expand-md mobileNav ">
        @if (!Request.IsAuthenticated)
        {
            @*<div style="display:inline-block;">

                    <a class="trsc-admin-log trsc-mobile-sep" href="~/Home/Education">Education</a>
                </div>*@
            <a class="trsc-admin-log" href="~/ResearchCenter/ClaimResearchCenter">
                For Research Centers
            </a>
        }
        <ul class="navbar-nav" style="margin-left: 5%; margin-bottom: 4px;">

            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()
                    <li class="nav-item">
                        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" }) | <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    </li>
                }
            }
            else
            {
                @*<li><a href="/ResearchCenter/CreateResearchCenterProfile" class="btn btn-outline-primary">Claim a Research Center</a></li>*@
                <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "trsc-admin-log", id = "loginLink" })</li>
            }
        </ul>
    </nav>


    <!--MOBILE NAVIGATION-->
    <nav class="navbar navbar-expand-lg trsc-main-nav-home">
        <a class="mobile-logo-home" href="~/"><img src="~/Content/images/TSSVGWTag.svg" class="trsc-logo-mobile" /></a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" onclick="openNav()" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">
                <img src="~/Content/images/icons/menutoggle.svg" />
            </span>
        </button>
    </nav>

    <div id="myNav" class="mobileMenu">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <div class="mobileMenu-content">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "trsc-admin-log", id = "loginLink" })<div></div></li>
                <li class="nav-item">
                    <a class="trsc-admin-log" href="~/Home/Education">
                        Education
                    </a><div></div>
                </li>
                <li class="nav-item"><a href="~/Home/FindClinicalTrial">Find a Clinical Trial</a><div></div></li>
                <li class="nav-item"><a href="~/Home/LookUpResearchCenter">Look Up a Research Center</a><div></div></li>
                <li class="nav-item"><a href="~/Ratings/RateTrial">Rate a Research Center</a><div></div></li>
            </ul>
        </div>
    </div>

    @if (Request.IsAuthenticated)
    {
        <style>
            .trsc-main-nav {
                margin-top: 0 !important;
            }
        </style>
    }
    <script>
        function openNav() {
            document.getElementById("myNav").style.height = "100%";
            $('body').addClass("fixedPosition");
        }

        function closeNav() {
            document.getElementById("myNav").style.height = "0%";
            $('body').removeClass("fixedPosition");
        }

    </script>
</div>

