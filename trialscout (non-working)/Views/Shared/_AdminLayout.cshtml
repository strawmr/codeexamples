<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/minified")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/summernote")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/umd/popper-utils.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/summernote-bs4.js"></script>
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/AllExceptHome")

    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans:400,700|Montserrat:400,300i,700" rel="stylesheet">

    @*<link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" type="text/css" rel="stylesheet" />*@


    @*<link rel="stylesheet" type="text/css" href="~/Content/summernote-bs4.css" />*@



    @RenderSection("scripts", required: false)
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css" rel="stylesheet" />

</head>
<body>
    <div class="row trsc-masthead">
        <div class="col-12 col-lg-3 trsc-logo-full">
            <a href="~/"><img src="~/Content/images/TSNoTagLogo.svg" class="img-fluid" alt="TrialScout" border="0" /></a>
        </div>
        <div class="col-12 col-lg-9 trsc-partner-login">
            @if (Request.IsAuthenticated)
            {
                <div class="row rightbox">
                    <div class="col-12 col-lg-6 trsc-admin-menu float-right">
                        @Html.Partial("_NavAdminMenu")
                    </div>
                    <div class="col-12 col-lg-6 trsc-login float-right">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            }
            else
            {
                <div class="row rightbox">
                    <div class="col-12 col-lg-8 trsc-admin-menu float-right">
                        @Html.Partial("_NavAdminMenu")
                    </div>
                    <div class="col-12 col-lg-4 trsc-login float-right">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-12 trsc-main-menu">
                    @Html.Partial("_NavMainMenu")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>