@model TrialScout.Web.ViewModels.EditResearchCenterViewModel

<h3>Profile Setup Progress</h3>

<div class="row">
    <div class="col-12">
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: @Model.ProfileCompleteness%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@Model.ProfileCompletenessDescription</div>
        </div>
    </div>
</div>

<div class="row trsc-progress-steps-row">
    <div class="col-6">
        <div class="dropdown trsc-profile-dd">
            <div id="btnStep1" class="dropbtn">1. Basic Info @Model.BasicInfoStatus <i class="fa fa-caret-down"></i></div>
        </div>
        <div id="step1" class="dropdown-content trsc-profile-dd-content">
            <ul>
                <li>
                    @if (Model.IsProfileImageComplete)
                    {
                    <span><a href="#ProfileImageBlobUri"><del>Profile Pic</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span>Profile Pic</span>
                    }
                </li>
                <li>
                    @if (Model.IsLocationNameComplete)
                    {
                    <span><a href="#LocationName"><del>Location Name</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span>Location Name</span>
                    }
                </li>
                <li>
                    @if (Model.IsSummaryComplete)
                    {
                    <span><a href="#Summary"><del>Summary</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <a href="#Summary">Summary</a>
                    }
                </li>
                <li>
                    @if (Model.IsAddressComplete)
                    {
                    <span><a href="#Address"><del>Address</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span><a href="#Address">Address</a></span>
                    }
                </li>
                <li>
                    @if (Model.IsCityComplete)
                    {
                    <span><a href="#City"><del>City</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span><a href="#City">City</a></span>
                    }
                </li>
                <li>
                    @if (Model.IsStateComplete)
                    {
                    <span><a href="#State"><del>State</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span><a href="#State">State</a></span>
                    }
                </li>
                <li>
                    @if (Model.IsZipComplete)
                    {
                    <span><a href="#Zip"><del>Zip</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span><a href="#Zip">Zip</a></span>
                    }
                </li>
                <li>
                    @if (Model.IsPhoneComplete)
                    {
                    <span><a href="#Phone"><del>Phone</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span><a href="#Phone">Phone</a></span>
                    }
                </li>
                <li>
                    @if (Model.IsUrlComplete)
                    {
                    <span><a href="#Url"><del>Website</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span><a href="#Url">Website</a></span>
                    }
                </li>
            </ul>
        </div>

    </div>
    <div class="col-6">
        <div id="btnStep2" class="dropbtn trsc-profile-dd">2. Search Optimization @Model.SearchOptimizationStatus <i class="fa fa-caret-down"></i></div>
        <div id="step2" class="dropdown-content trsc-profile-dd-content">
            <ul>
                <li>
                    @if (Model.IsLogoComplete)
                    {
                    <span><a href="#logoImage"><del>Logo</del></a></span>
                    <input type="checkbox" checked />
                    } else
                    {
                    <span><a href="#logoImage">Logo</a></span>
                    }
                </li>
                <li>
                    @if (Model.IsSearchDescriptionComplete)
                    {
                    <span><a href="#SearchDescription"><del>Search Description</del></a></span>
                    <input type="checkbox" checked />
                    } else
                    {
                    <span><a href="#SearchDescription">Search Description</a></span>
                    }
                </li>
                <li>
                    @if (Model.IsDepartmentSelectionComplete)
                    {
                    <span><a href="#selectAllDepartments"><del>Departments</del></a></span>
                    <input type="checkbox" checked />
                    } else
                    {
                    <span><a href="#selectAllDepartments">Departments</a></span>
                    }
                </li>
                <li>
                    @if (Model.IsImageUploadComplete)
                    {
                    <span><a href="#secondaryImages"><del>Images</del></a></span>
                    <input type="checkbox" checked />
                    }
                    else
                    {
                    <span>Images</span>
                    }
                </li>
            </ul>
        </div>
    </div>
    @*<div class="col-3">
        @if (!Model.IsPublished && Model.ProfileCompleteness == 100)
        {
            <button class="btn btn-success" id="publishProfile" data-url="@Url.Action("Billing", "Account")">Publish</button>
        }
        else if (!Model.IsPublished)
        {
            <button class="btn btn-success" id="publishProfile" disabled>Publish</button>
        }
    </div>*@
</div>

<style>
    .trsc-progress-steps-row {
        font-size: .8rem;
        padding: 0;
        background-color: #DADFEC;
        color: #08262C;
        border-radius: 12px;
        cursor: pointer;
    }

    .trsc-profile-dd, .trsc-profile-dd a, .trsc-profile-dd a:hover, .trsc-profile-dd a:active, .trsc-profile-dd a:visited {
        padding: 8px;
        /*background-color: #08262C;*/
        color: #fff;
    }

    .trsc-profile-dd-content {
        padding: 16px 0;
        border-radius: 12px;
        background-color: #DADFEC;
        color: #08262C;
        position: absolute;
        display: block;
        z-index: 1000000;
        top:26px;
    }
        .trsc-profile-dd-content ul {
            list-style-type: none;
            padding:16px;
            margin:0;
        }

</style>
