@model List<TrialScout.Web.ViewModels.ResearchCenterImageViewModel>


<script>
    var elements = document.getElementsByClassName("picture-col")
    var four = function () {
        for (var i = 0; i < elements.length; i++) {
            elements[i].style.flex = "70%";
        }
    }

    four();

</script>

<div class="picture-row">

    <div class="picture-col">

        @foreach (TrialScout.Web.ViewModels.ResearchCenterImageViewModel image in Model.Take(2))
        {

            <a href="@image.ImageUri" data-fancybox="gallery"> <img src="@image.ImageUri" style="width:100%;"></a>

        }

    </div>

    <div class="picture-col">
        @foreach (TrialScout.Web.ViewModels.ResearchCenterImageViewModel image in Model.Skip(2).Take(2))
        {

            <a href="@image.ImageUri" data-fancybox="gallery"> <img src="@image.ImageUri" style="width:100%;"></a>

        }

    </div>
</div>

<style>
    .picture-row {
        display: flex;
        flex-wrap : wrap;
        padding: 0 4px;
        width:290px;
    }

    .picture-col {
        flex: 50%;
        padding: 0 4px; 
    }

    .picture-col img {
        vertical-align : middle;
        margin-top : 10px;
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.6/jquery.fancybox.min.js"></script>
